<form method="GET" action="~/Job/jobDelete">
    <h1>Delete Job</h1>
    <hr style="border:5px solid #1e222d" />
    <div class="deletebox">
        <div class="col-sm-2">
            <label for="jobT">Title</label>
            <input type="text" class="form-control" id="jobT" name="jobTitle" placeholder="Enter a Title" style="font-size:small">
        </div>
        <div class="col-sm-2">
            <label for="jId">Job ID</label>
            <input type="text" id="jId" name="JobId" class="form-control" style="font-size:small" placeholder="Enter a Job ID">
        </div>
        <div class="col-sm-1">
            <label style="visibility:hidden">Delete</label>
            <button type="submit" class="form-control">Delete</button>
        </div>
    </div>
</form>




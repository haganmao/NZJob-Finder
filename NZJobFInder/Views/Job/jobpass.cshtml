<article style="width:auto;text-align:left;">
    <h1>Job List</h1>
    <hr style="border:5px solid #1e222d" />
    <hr />
    @foreach (var j in ViewBag.jobPassList)
    {
        <center>
            <div style="width:70%;display:inline-block;border:1px solid #1e222d;margin-top:3px;text-align:left;padding-left:10px">
                <h1 style="background-color:#1e222d;color:white;">@j.JobId</h1>
                <h3>@j.jobTitle</h3>
                <p>@j.jobLocation</p>
                <p>@j.jobSalary</p>
                <pre style="display:block;text-align:left;word-break:keep-all;word-wrap:break-word;margin-right:10px;">@j.jobRespon</pre>
                <p>@j.jobContactNum</p>
                <p>@j.jobContactEmail</p>
            </div>
        </center>
    }
</article>




